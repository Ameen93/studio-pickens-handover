# Studio Pickens Environment Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# API Base URL (used by frontend)
# Development: http://localhost:3001
# Production: https://api.yourdomain.com
REACT_APP_API_BASE_URL=http://localhost:3001

# CORS Configuration
# Development: http://localhost:3000
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# Static Files Configuration
STATIC_FILES_PATH=./public
IMAGES_PATH=./public/images

# Data Storage Configuration
DATA_PATH=./data

# Security Configuration (REQUIRED for authentication)
JWT_SECRET=your-super-secret-jwt-key-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password
ADMIN_EMAIL=admin@studiopickens.com

# Rate Limiting Configuration
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5

# Production Security Settings
PRODUCTION_MODE=false

# Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Monitoring (optional)
# UPTIME_WEBHOOK_URL=your-uptime-monitoring-webhook-url
# HEALTH_CHECK_ENDPOINT=your-health-check-endpoint

# Email Configuration (REQUIRED for contact forms)
# Gmail configuration example:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Contact Form Destination Email
CONTACT_EMAIL=hello@studiopickens.com

# For Gmail:
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an "App Password" for this application
# 3. Use your Gmail address as SMTP_USER
# 4. Use the App Password as SMTP_PASS

# Other email providers:
# - Outlook: smtp.office365.com, port 587
# - Yahoo: smtp.mail.yahoo.com, port 587
# - Custom domain: check with your email provider

# SSL/TLS Configuration (for HTTPS)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Redis Configuration (for session storage in production)
# REDIS_URL=redis://localhost:6379

# Database Configuration (if migrating from JSON files)
# DATABASE_URL=mongodb://localhost:27017/studio-pickens
# DATABASE_NAME=studio-pickens

# Vercel Specific (when deploying to Vercel)
# VERCEL=1
# VERCEL_URL=your-vercel-url.vercel.app